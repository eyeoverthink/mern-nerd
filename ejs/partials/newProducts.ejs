<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <title>Create Page</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section h3 {
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>

<div class="container">
    <h1 class="text-center">Add New Information</h1>

    <!-- Tab navigation -->
    <ul class="nav nav-tabs" id="createTab" role="tablist">
        <li class="active"><a href="#restaurants" data-toggle="tab">Restaurant</a></li>
        <li><a href="#hotels" data-toggle="tab">Hotel</a></li>
        <li><a href="#attractions" data-toggle="tab">Attraction</a></li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content">
        <!-- Restaurant Form -->
        <div id="restaurants" class="tab-pane fade in active">
            <div class="form-section">
                <h3>Add New Restaurant</h3>
                <form action="/addRestaurant" method="POST">
                    <div class="form-group">
                        <label for="restaurantName">Name</label>
                        <input type="text" id="restaurantName" name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="restaurantDescription">Description</label>
                        <textarea id="restaurantDescription" name="description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="restaurantCuisine">Cuisine</label>
                        <input type="text" id="restaurantCuisine" name="cuisine" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="restaurantImage">Image URL</label>
                        <input type="url" id="restaurantImage" name="imageUrl" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="restaurantAddress">Address</label>
                        <input type="text" id="restaurantAddress" name="address" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Restaurant</button>
                </form>
            </div>
        </div>

        <!-- Hotel Form -->
        <div id="hotels" class="tab-pane fade">
            <div class="form-section">
                <h3>Add New Hotel</h3>
                <form action="/addHotel" method="POST">
                    <div class="form-group">
                        <label for="hotelName">Name</label>
                        <input type="text" id="hotelName" name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="hotelDescription">Description</label>
                        <textarea id="hotelDescription" name="description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="hotelImage">Image URL</label>
                        <input type="url" id="hotelImage" name="imageUrl" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="hotelAddress">Address</label>
                        <input type="text" id="hotelAddress" name="address" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="hotelRating">Rating</label>
                        <input type="number" id="hotelRating" name="rating" class="form-control" min="0" max="5">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Hotel</button>
                </form>
            </div>
        </div>

        <!-- Attraction Form -->
        <div id="attractions" class="tab-pane fade">
            <div class="form-section">
                <h3>Add New Attraction</h3>
                <form action="/addAttraction" method="POST">
                    <div class="form-group">
                        <label for="attractionName">Name</label>
                        <input type="text" id="attractionName" name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="attractionDescription">Description</label>
                        <textarea id="attractionDescription" name="description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="attractionImage">Image URL</label>
                        <input type="url" id="attractionImage" name="imageUrl" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="attractionAddress">Address</label>
                        <input type="text" id="attractionAddress" name="address" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Attraction</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#createTab a').click(function(e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>

</body>

</html>